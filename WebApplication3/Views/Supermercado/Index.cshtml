@model List<Producto>

<h2>Productos Disponibles</h2>
<table>
    <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Imagen</th>
        <th>Precio</th>
        <th>Acción</th>
    </tr>
    @foreach (var producto in Model)
    {
        <tr>
            <td>@producto.Id</td>
            <td>@producto.Nombre</td>
            <!-- <td><img src="@producto.Imagen" alt="Imagen de @producto.Nombre" /></td> -->
            <td><img src="~/images/@producto.Imagen" alt="Imagen de @producto.Nombre" /></td>
            <td>@producto.Precio</td>
            <td><a href="@Url.Action("AgregarAlCarrito", "Supermercado", new { id = producto.Id })">Comprar ahora</a></td>
        </tr>
    }
</table>
<a href="@Url.Action("Carrito", "Supermercado")">Ver carrito</a>

